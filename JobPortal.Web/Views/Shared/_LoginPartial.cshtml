@using JobPortal.Data.Models;
@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a  class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity?.Name!</a>
    </li>
    <li class="nav-item">
        <form  class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button  type="submit" class="nav-link btn btn-link text-dark" asp-controller="User" asp-action="Logout">Logout</button>
        </form>
    </li>
}
else
{   

   <li class="nav-item">
            <a class="nav-link text-light btn btn-primary" asp-controller="User" asp-action="Register">Register</a>

   </li>
       
   
    <li class="nav-item">
           
           <a class="nav-link text-light btn btn-primary" asp-controller="User" asp-action="Login">login</a>
    </li>
}
</ul>
