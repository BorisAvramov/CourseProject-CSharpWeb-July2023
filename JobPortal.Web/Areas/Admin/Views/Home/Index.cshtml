@{
    ViewData["Title"] = "Home Page";
}

<link rel="stylesheet" href="~/css/admin.css" asp-append-version="true" />


<div class="mt-4 p-5 bg-light text-center">
    <h2 class="display-4">Hello, Admin!</h2>
    <p class="lead mb-1 mt-3">
        This is your administrator area - you can <b>read</b>, <b>create</b>,
        <b>delete</b> and <b>edit</b> job offers.
        
    </p>
    <p class="lead mt-1">
        You can also see <b>all job offers and applicants</b> in the
        system.
    </p>
    <hr class="my-4">
    <a asp-area="" asp-controller="JobOffer" asp-action="All"
       class="btn btn-primary btn-lg">All Job Offers</a>
    <a asp-area="" asp-controller="JobOffer" asp-action="Add"
       class="btn btn-primary btn-lg">Add Job Offer</a>
    <span> | </span>
    <a asp-area="" asp-controller="JobOffer" asp-action="JobOffersPublishedFromACompany"
       class="btn btn-primary btn-lg">My Job Offers</a>
    <span> | </span>

    <a asp-area="" asp-controller="Applicant" asp-action="All"
       class="btn btn-primary btn-lg">All Applicants</a>
    <span> | </span>
   
    
    <a asp-area="Admin" asp-controller="User" asp-action="All"
       class="btn btn-primary btn-lg">All Users</a>
</div>